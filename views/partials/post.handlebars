<link rel="stylesheet" href="/css/styling.css">
<div id="color">

    <div id="color" class="container p-2">
        <div class="row row-cols-1 row-cols-md-2 g-4">
            {{#each posts}}
            <div class="col">

                <div id="headingstyling" class="card w-100 p-2" value="{{id}}">

                    <h3 id="textcolor" class="card-title mx-auto p-2 ">{{title}}</h3>
                    <h6 id="mutedcolor" class="card-subtitle mb-2 d-flex flex-row-reverse px-2">{{user.username}} on {{
                        format_date date_created}} </h6>
                    <div id="cardstyling" class="card-body p-3">
                        <p class="card-text p-1">{{content}}</p>

                        <h5> Comments </h5>
                         {{#each comments }}

                         <h6> {{user.username}} on {{format_date date_created}}</h6>

                            <p> {{ comment }} </p>

                            {{/each}}
                    
                        <a class="btn btn-primary" id="headingstyling" data-bs-toggle="collapse"
                            href="#comment{{id}}" role="button" aria-expanded="false"
                            aria-controls="collapseExample">
                            Leave a Comment
                        </a>
                        {{!-- ask about how and where to store the comments left behind by users --}}

                        <form class="collapse comment" id="comment{{id}}">

                            <input type="hidden" name="post-id" value="{{id}}"/>
                            <div class="input-group p-3">
                                <textarea name="comment-body" class="form-control p-3"
                                    aria-label="With textarea"></textarea>
                            </div>

                            <div class="p-1 d-flex flex-row-reverse" id="commentbutton">
                                <button id="headingstyling" class="btn btn-primary align-left save-comment"
                                    type="submit">
                                    Save Comment
                                </button>
                            </div>
                        </form>

                    </div>

                </div>

            </div>
            {{/each}}

        </div>

    </div>


</div>